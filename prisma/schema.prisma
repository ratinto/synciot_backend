// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      String   @default("operator")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  robots    Robot[]  // User owns multiple robots

  @@map("users")
}

model Robot {
  id             Int             @id @default(autoincrement())
  userId         Int?            // Robot belongs to a user (optional for existing data)
  user           User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  name           String
  status         String          @default("offline") // online, offline, error
  battery        Int             @default(0) // 0-100 percentage
  lastSeen       DateTime        @default(now())
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  sensors        Sensor[]

  @@index([userId])
  @@map("robots")
}

model Sensor {
  id             Int             @id @default(autoincrement())
  robotId        Int
  robot          Robot           @relation(fields: [robotId], references: [id], onDelete: Cascade)
  
  name           String          // e.g., "Temperature Sensor", "Humidity Sensor"
  type           String          // temperature, humidity, distance, battery, signal
  value          Float           // current sensor value
  unit           String          // Celsius, %, meters, dBm, etc.
  
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  @@index([robotId])
  @@map("sensors")
}
